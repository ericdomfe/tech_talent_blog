<p id="notice"><%= notice %></p>

<h1>Listing Blo Posts</h1>

<div class="panel panel-default">
      <% @blo_posts.each do |blo_post| %>
  <div class="col-md-6">
    <div class="panel-heading">
      <%= blo_post.title %>
    </div>
    <div class="panel-body">
     by <%= blo_post.author %><br>
      <%= blo_post.blog_entry %>
    </div>
    <div class="panel-footer">
      
      <%= link_to 'Edit', edit_blo_post_path(blo_post), class:"btn btn-warning" %>
      <%= link_to 'Destroy', blo_post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn  -danger" %>
    </div>
  </div>
      <% end %>

</div>
 
<br>

<%= link_to 'New Blo post', new_blo_post_path %>
